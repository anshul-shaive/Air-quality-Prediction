<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/pref_cat_customize">
        <ListPreference
            android:key="language_preference"
            android:title="@string/change_language_title"
            android:icon="@drawable/pref_language"
            android:summary="@string/language_english"
            android:entries="@array/languages"
            android:entryValues="@array/language_values"
            android:defaultValue="@string/language_english_alias" />

        <ListPreference
            android:key="theme_preference"
            android:title="@string/change_theme_title"
            android:icon="@drawable/pref_theme"
            android:summary="@string/theme_light"
            android:entries="@array/themes"
            android:entryValues="@array/themes_values"
            android:defaultValue="@string/theme_light_alias" />

        <SwitchPreference
            android:key="theme_auto_preference"
            android:title="@string/set_auto_night_theme"
            android:icon="@drawable/auto_night"
            android:switchTextOn="I"
            android:switchTextOff="O"
            android:defaultValue="true"/>
    </PreferenceCategory>
</PreferenceScreen>